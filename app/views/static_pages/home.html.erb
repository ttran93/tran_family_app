<% if signed_in? %>
  <div class="row">
    <aside class="span3">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span9">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>


  
<% else %>
  <div class="container-fluid">
    <div id="slider" class"=carousel slider">
      <div class="carousel-inner">


        <div class="item active">
          <img src="http://placehold.it/1150x500">
          <div class="carousel-caption">
            <h4>Headline for image 1</h4>
            <p>Description for the image 1</p>
          </div>
        </div>
        
        <div class="item">
          <img src="http://placehold.it/1150x500">
          <div class="carousel-caption">
            <h4>Headline for image 2</h4>
            <p>Description for the image 1</p>
          </div>
        </div>      

        <div class="item">
          <img src="http://placehold.it/1150x500">
          <div class="carousel-caption">
            <h4>Headline for image 3</h4>
            <p>Description for the image 1</p>
          </div>
        </div>

      </div>
      <a class="left carousel-control" href="#slider" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control" href="#slider" data-slide="next">&rsaquo;</a>
    </div>
  </div>

  <div class="center hero-unit">
    <h1>Welcome</h1>

    <h2>
      This is a customized app for the Tran Family.
    </h2>
    <h3>
      <a href="https://drive.google.com/folderview?id=0Bw8jqbOsxCywNm1KT2t0QVhqd0U&usp=gmail">Open </a>
      the Google Drive share folder. 
    </h3>

    <h3>
      <a href="https://extendedtranfamily.shutterfly.com/">Open </a>
      the Shutterfly share album. <br><br>
    </h3>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "rails"), '#' %>
<% end %>